generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              String          @id @default(uuid())
  username        String          @unique
  password        String
  is_verified     Boolean         @default(false)
  profile         Profiles?       @relation("userProfile")
  tweets          Tweets[]        @relation("tweetsRelation")
  comments        Comments[]
  retweetsMade    Retweets[]      @relation("UserRetweets")
  retweetsOwn     Retweets[]      @relation("OriginalTweetOwner")
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt
  messagesSent    Messages[]      @relation("senderRelation")
  messagesRecieve Messages[]      @relation("recieverRelation")
  notifications   Notifications[] @relation("notificationRelation")
  follower        Follow[]        @relation("FollowerRelation")
  following       Follow[]        @relation("FollowingRelation")
}

model Profiles {
  id             String          @id @default(uuid())
  userId         String          @unique
  category       ProfileCategory
  bio            String
  mediaId        String
  profilePicture String
  user           Users           @relation("userProfile", fields: [userId], references: [id], onDelete: Cascade)
  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt
}

enum ProfileCategory {
  Education
  Financial
  Professional
  Advertising
  Science
  Sport
  Travel
  Influencer
  Entrepreneur
  Community
  Other
}

model Tweets {
  id         String     @id @default(uuid())
  userId     String
  content    String
  user       Users      @relation("tweetsRelation", fields: [userId], references: [id], onDelete: Cascade)
  media      Medias[]   @relation("mediaRelation")
  comments   Comments[] @relation("commentRelation")
  Likes      Likes[]
  retweets   Retweets[]
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}

model Follow {
  id           String   @id @default(uuid())
  followerId   String
  FollowringId String
  follower     Users    @relation("FollowerRelation",fields: [followerId], references: [id], onDelete: Cascade)
  following    Users    @relation("FollowingRelation",fields: [FollowringId], references: [id], onDelete: Cascade)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

model Medias {
  id         String    @id @default(uuid())
  userId     String
  tweetId    String
  url        String
  mediaType  MediaType
  Tweets     Tweets    @relation("mediaRelation", fields: [tweetId], references: [id], onDelete: Cascade)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

enum MediaType {
  image
  video
  gif
}

model Likes {
  id         String    @id @default(uuid())
  userId     String
  tweetId    String?
  commetId   String?
  likeType   LikeType
  tweets     Tweets?   @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  comments   Comments? @relation(fields: [commetId], references: [id], onDelete: Cascade)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

enum LikeType {
  TWEET
  COMMENT
}

model Comments {
  id         String   @id @default(uuid())
  userId     String
  tweetId    String
  content    String
  tweet      Tweets   @relation("commentRelation", fields: [tweetId], references: [id], onDelete: Cascade)
  user       Users    @relation(fields: [userId], references: [id])
  likes      Likes[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Retweets {
  id              String   @id @default(uuid())
  tweetId         String
  originalOwnerId String
  retweetUserId   String
  tweets          Tweets   @relation(fields: [tweetId], references: [id])
  retweetUser     Users    @relation("UserRetweets", fields: [retweetUserId], references: [id], onDelete: Cascade)
  originalOwner   Users    @relation("OriginalTweetOwner", fields: [originalOwnerId], references: [id], onDelete: Cascade)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

model Messages {
  id         String   @id @default(uuid())
  senderId   String
  recieverId String
  content    String
  sender     Users    @relation("senderRelation", fields: [senderId], references: [id], onDelete: Cascade)
  reciever   Users    @relation("recieverRelation", fields: [recieverId], references: [id], onDelete: Cascade)
  isSeen     Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Notifications {
  id        String            @id @default(uuid())
  userId    String
  content   String
  user      Users             @relation("notificationRelation", fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationsType
  createdAt DateTime          @default(now())
  updatedAt DateTime          @default(now())
}

enum NotificationsType {
  user
  system
}
