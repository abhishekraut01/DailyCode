generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id                      String          @id         @default(uuid())
  username                String          @unique
  password                String       
  is_verified             Boolean         @default(false)
  created_at              DateTime        @default(now())
  updated_at              DateTime        @updatedAt
}

model Profiles{
  id                      String          @id         @default(uuid())
  userId                  String
  category                ProfileCategory
  bio                     String
  mediaId                 String
  profilePicture          String
  created_at              DateTime        @default(now())
  updated_at              DateTime        @updatedAt
}

enum ProfileCategory {
  Education
  Financial
  Professional
  Advertising
  Science
  Sport
  Travel
  Influencer
  Entrepreneur
  Community
  Other
}

model Tweets{
  id                      String          @id         @default(uuid())
  userId                  String
  content                 String
  mediaId                 String
  created_at              DateTime        @default(now())
  updated_at              DateTime        @updatedAt
}

model Medias{
  id                      String          @id         @default(uuid())
  userId                  String
  tweetId                 String
  url                     String
  mediaType               MediaType
  created_at              DateTime        @default(now())
  updated_at              DateTime        @updatedAt
}

enum MediaType {
  image
  video
  gif
}

model Likes {
  id                       String         @id           @default(uuid())
  userId                   String
  tweetId                  String
  commetId                 String
  created_at               DateTime       @default(now())
  updated_at               DateTime       @updatedAt
} 

model Comments {
  id                       String         @id           @default(uuid())
  userId                   String
  tweetId                  String
  content                  String
  created_at               DateTime       @default(now())
  updated_at               DateTime       @updatedAt
}

model Retweets {
  id                       String         @id           @default(uuid())
  tweetId                  String           
  originalOwnerId          String           
  retweetUserId            String           
  created_at               DateTime       @default(now())
  updated_at               DateTime       @updatedAt
}

model Messages {
  id                       String         @id           @default(uuid())
  senderId                 String
  recieverId               String
  content                  String
  isSeen                   Boolean        @default(false)
  created_at               DateTime       @default(now())
  updated_at               DateTime       @updatedAt
}

model Notifications {
  id        String            @id @default(uuid())   
  userId    String                               
  content   String
  type      NotificationsType                    
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum NotificationsType {
  user
  system
}